{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dynamic-device-scaler Helm values",
  "type": "object",
  "additionalProperties": true,

  "properties": {
    "common": {
      "type": "object",
      "additionalProperties": true,
      "required": ["name", "image"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the deployment or release.",
          "pattern": "^[a-z0-9]([-a-z0-9]*[a-z0-9])?$"
        },
        "image": {
          "type": "object",
          "description": "Container image configuration.",
          "properties": {
            "registry": {
              "type": "string",
              "description": "Container registry, e.g. docker.io"
            },
            "repository": {
              "type": "string",
              "minLength": 1,
              "description": "Image repository, e.g. bitnami/dds"
            },
            "tag": {
              "type": "string",
              "minLength": 1,
              "description": "Image tag"
            },
            "pullPolicy": {
              "type": "string",
              "enum": ["Always", "IfNotPresent", "Never"],
              "default": "IfNotPresent",
              "description": "Kubernetes image pull policy."
            }
          },
          "required": ["repository", "tag"],
          "additionalProperties": true
        },

        "env": {
          "type": "object",
          "description": "Environment variables for the container.",
          "default": {},
          "additionalProperties": { "type": "string" },

          "properties": {
            "SCAN_INTERVAL": {
              "type": "string",
              "pattern": "^[0-9]+$",
              "description": "Interval (in seconds) between scans, e.g. '10'."
            },

            "DEVICE_NO_REMOVAL_DURATION": {
              "type": "string",
              "pattern": "^[0-9]+$",
              "description": "Duration in seconds before a device is considered removed if not detected again."
            },

            "DEVICE_NO_ALLOCATION_DURATION": {
              "type": "string",
              "pattern": "^[0-9]+$",
              "description": "Duration in seconds before a device can be reallocated again."
            }
          }
        }
      },

      "required": ["name", "image"]
    }
  }
}
